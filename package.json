{
  "private": false,
  "name": "kelas-rumah-berbagi",
  "description": "Kelas Rumah Berbagi",
  "license": "MIT",
  "prisma": {
    "seed": "node --require esbuild-register prisma/seed.ts"
  },
  "scripts": {
    "build": "npm run build:css && npm run build:remix",
    "build:css": "tailwindcss --minify -o ./app/tailwind.css",
    "build:remix": "remix build --sourcemap",
    "dev": "concurrently -k \"npm run dev:css\" \"remix dev\"",
    "dev:css": "tailwindcss -o ./app/tailwind.css --watch",
    "format": "prettier --write \"./**/*.{ts,tsx,js,jsx,yml,yaml,md}\"",
    "lint": "eslint \"**/*.{js,jsx,ts,tsx,yml,yaml}\"",
    "lint:fix": "eslint --fix \"**/*.{js,jsx,ts,tsx,yml,yaml}\"",
    "prepare": "husky install",
    "start": "remix-serve build",
    "start:e2e": "cross-env RUNNING_E2E=true DATABASE_URL=file:./test.db npm start",
    "test": "playwright test",
    "prestart": "npm run build",
    "postinstall": "remix setup node",
    "test:e2e:dev": "cross-env RUNNING_E2E=true start-server-and-test dev http-get://localhost:3000/ test",
    "test:e2e:run": "cross-env RUNNING_E2E=true DATABASE_URL=file:./test.db start-server-and-test start:e2e http-get://localhost:3000/ test",
    "type-check": "tsc --noEmit",
    "setup": "npm install && prisma migrate reset --force && npm run test:e2e:run",
    "presetup": "npx playwright install-deps",
    "deploy": "flyctl deploy"
  },
  "dependencies": {
    "@headlessui/react": "1.4.2",
    "@heroicons/react": "1.0.5",
    "@prisma/client": "3.6.0",
    "@reach/auto-id": "0.16.0",
    "@remix-run/react": "1.1.1",
    "@remix-run/serve": "1.1.1",
    "@types/validator": "13.7.0",
    "burner-email-providers": "1.0.67",
    "clsx": "1.1.1",
    "cross-env": "7.0.3",
    "dotenv": "10.0.0",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "remix": "1.1.1",
    "remix-auth": "2.5.0-0",
    "validator": "13.7.0"
  },
  "devDependencies": {
    "@babel/eslint-plugin": "7.16.5",
    "@babel/preset-react": "7.16.7",
    "@babel/preset-typescript": "7.16.7",
    "@commitlint/cli": "15.0.0",
    "@commitlint/config-conventional": "15.0.0",
    "@jackfranklin/test-data-bot": "1.4.0",
    "@playwright-testing-library/test": "4.0.1",
    "@playwright/test": "1.17.1",
    "@remix-run/dev": "1.1.1",
    "@tailwindcss/forms": "0.3.4",
    "@testing-library/jest-dom": "5.16.1",
    "@testing-library/react": "12.1.2",
    "@testing-library/user-event": "13.5.0",
    "@types/jest": "27.4.0",
    "@types/react": "17.0.24",
    "@types/react-dom": "17.0.9",
    "@typescript-eslint/eslint-plugin": "5.8.0",
    "@typescript-eslint/parser": "5.8.0",
    "concurrently": "6.4.0",
    "esbuild": "0.14.8",
    "esbuild-register": "3.2.0",
    "eslint": "8.5.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-import-resolver-typescript": "2.5.0",
    "eslint-plugin-import": "2.25.3",
    "eslint-plugin-jsx-a11y": "6.5.1",
    "eslint-plugin-playwright": "0.7.1",
    "eslint-plugin-react": "7.27.1",
    "eslint-plugin-yml": "0.12.0",
    "husky": "7.0.4",
    "is-ci-cli": "2.2.0",
    "jest": "27.4.5",
    "jest-watch-select-projects": "2.0.0",
    "jest-watch-typeahead": "1.0.0",
    "lint-staged": "12.1.3",
    "msw": "0.36.3",
    "prettier": "2.5.1",
    "prisma": "3.6.0",
    "start-server-and-test": "1.14.0",
    "tailwindcss": "2.2.19",
    "typescript": "4.1.2"
  },
  "engines": {
    "node": "16",
    "npm": "8"
  },
  "sideEffects": false,
  "main": "dist/worker.js",
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": "eslint --cache --fix",
    "*.{js,jsx,ts,tsx,css,md}": "prettier --write"
  }
}
